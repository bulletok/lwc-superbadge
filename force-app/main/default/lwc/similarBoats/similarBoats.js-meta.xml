<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <masterLabel>Similar Boats Component</masterLabel>
    <description>Component to display similar boats!</description>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property
        label="Enter the property you want to compare by"
        name="similarBy"
        type="String"
        datasource="Type, Price, Length"
        default="Type"
      />
            <objects>
                <object>Boat__c</object>
            </objects>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
